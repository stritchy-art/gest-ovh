# Variables d'environnement pour Docker Compose

# Configuration OVH API
# 1. Créer une application sur https://eu.api.ovh.com/createApp/
# 2. Récupérer OVH_APP_KEY et OVH_APP_SECRET
# 3. Générer OVH_CONSUMER_KEY avec: node scripts/generate-ovh-token.js
OVH_ENDPOINT=ovh-eu
OVH_APP_KEY=your_app_key_here
OVH_APP_SECRET=your_app_secret_here
OVH_CONSUMER_KEY=your_consumer_key_here

# Client
VITE_API_BASE_URL=http://localhost:3001

# Redis
REDIS_URL=redis://localhost:6379
ACTION_LOG_RETENTION=500

# Debug
DEBUG_MODE=false

# Notifications
NOTIFICATIONS_ENABLED=true
SLACK_ENABLED=false
EMAIL_ENABLED=false

# Notifications Slack
SLACK_WEBHOOK_URL=

# Notifications Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM=ovh-manager@domaine.com
MAIL_TO=admin@domaine.com

# Ports
CLIENT_PORT=80
SERVER_PORT=3001
